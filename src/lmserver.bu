variant: fcos
version: 1.4.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
      - ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIMFJhPTPfNQuNCuz9AESupcGOwLtg8Xp+qTnv2+qU94O
      - ssh-rsa 
      - ssh-rsa 
kernel_arguments:
  should_exist:
    - selinux=0
storage:
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        inline: lmserver
  links:
    - path: /etc/localtime
      target: /usr/share/zoneinfo/Europe/Amsterdam
systemd:
  units:
    - name: var-mnt-storage.mount
      enabled: true
      contents: |
        [Unit]
        Description=Mount storage directory

        [Mount]
        What=LABEL=storage
        Where=/var/mnt/storage
        Type=btrfs
        Options=defaults,nofail,noatime,autodefrag

        [Install]
        WantedBy=multi-user.target
    - name: scrubber.service
      enabled: true
      contents: |
        [Unit]
        Description=btrfs scrub of the storage filesystem

        [Service]
        ExecStart=btrfs scrub start -Bd /dev/disk/by-label/storage

        [Install]
        WantedBy=multi-user.target
    - name: scrubber.timer
      enabled: true
      contents: |
        [Unit]
        Description=Scrubber service timer

        [Timer]
        OnCalendar=monthly
        AccuracySec=12h
        Persistent=true
        Unit=scrubber.service

        [Install]
        WantedBy=basic.target
    - name: docker.service
      enabled: true
    - name: portainer.service
      enabled: true
      contents: |
        [Unit]
        Description=Portainer Service
        After=docker.service
        Requires=docker.service

        [Service]
        Restart=always
        ExecStartPre=-mkdir -p /var/mnt/storage/docker/portainer
        ExecStartPre=-/usr/bin/docker rm -f portainer
        ExecStartPre=-/usr/bin/docker pull portainer/portainer-ce:alpine
        ExecStartPre=/usr/bin/docker create \
          --name portainer \
          --rm \
          --volume /var/mnt/storage/docker/portainer:/data:rw \
          --volume /var/run/docker.sock:/var/run/docker.sock:ro \
          --log-driver syslog \
          --log-opt 'syslog-address=udp://127.0.0.1:515' \
          --log-opt 'tag={{.Name}}/{{.FullID}}' \
          --publish 9443:9443 \
          portainer/portainer-ce:alpine
        ExecStart=/usr/bin/docker start -a portainer

        [Install]
        WantedBy=multi-user.target
